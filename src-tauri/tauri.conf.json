{
	"build": {
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "clock.desktop",
		"version": "0.1.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"window": {
				"startDragging": true,
				"minimize": true,
				"close": true,
				"setPosition": true,
				"setFocus": true
			},
			"shell": {
				"all": false,
				"open": true
			}
		},
		"windows": [
			{
				"title": "clock.desktop",
				"width": 340,
				"height": 370,
				"x": 600,
				"y": 0,
				"resizable": false,
				"transparent": true,
				"decorations": false,
				"alwaysOnTop": true
			}
		],
		"security": {
			"csp": null
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.tauri.dev",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		}
	}
}
